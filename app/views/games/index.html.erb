<p id="notice"><%= notice %></p>

<h1>History</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Opponent</th>
      <th>Score</th>
      <th>Result</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.played_at %></td>
        <td><%= game.opponent(current_user).email %></td>
        <td><%= game.score(current_user) %></td>
        <td><%= game.result(current_user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
